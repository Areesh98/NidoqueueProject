<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Success:" />

        <TextView
            android:id="@+id/binomial_success_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />

        <Button
            android:id="@+id/binomial_success_add_button"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:text="+" />

        <Button
            android:id="@+id/binomial_success_minus_button"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/failure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Failure:" />

        <TextView
            android:id="@+id/binomial_failure_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />

        <Button
            android:id="@+id/binomial_failure_add_button"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:text="+" />

        <Button
            android:id="@+id/binomial_failure_minus_button"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:text="-" />

    </LinearLayout>

</LinearLayout>